<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.veryworks.iyeongjun.hkapp.WriteActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/ediTtitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom|center"
            android:inputType="textMultiLine"
            android:background="@null"
            android:hint="제목"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/edit_line" />

        <EditText
            android:id="@+id/editContents"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="본문을 입력해주세요"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:maxHeight="105dp"
            app:srcCompat="@drawable/img_songpa" />

        <ImageButton
            android:id="@+id/wtBtnSelect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/wt_select" />

        <ImageButton
            android:id="@+id/wtBtnUpload"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/wt_upload" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
